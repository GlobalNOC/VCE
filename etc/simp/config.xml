<!--
  config.xml defines the config for the simp collector, with the individual hosts defined in hosts.conf
-->

<config purge_interval="600">
    <redis host="127.0.0.1" port="6379"/>

    <group name="int" active="1" workers="2" interval="30" retention="300" snmp_timeout="15" max_reps="15">
        <mib oid="1.3.6.1.2.1.2.2"/>
        <mib oid="1.3.6.1.2.1.31.1.1.1"/>
    </group>

    <group name="bgp" active="0" workers="2" interval="30" retention="300" snmp_timeout="15" max_reps="15">
        <mib oid="1.3.6.1.2.1.15"/>
    </group>

    <group name="mac2ip" active="0" workers="5" interval="30" retention="300" snmp_timeout="15" max_reps="15">
        <mib oid="1.3.6.1.2.1.17.4.3"/>
    </group>
</config>
